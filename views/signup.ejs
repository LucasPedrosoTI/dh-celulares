<%- include('parts/head', {title: 'Cadastrar'}) %>
    <link rel="stylesheet" href="css/login.css">


    <div class="wrapper fadeInDown text-center">
        <div class="formContent bg-info rounded">

            <!-- Icon -->
            <div class="fadeIn first my-5">
                <svg class="bi bi-person-plus-fill" width="5em" height="5em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 100-6 3 3 0 000 6zm7.5-3a.5.5 0 01.5.5v2a.5.5 0 01-.5.5h-2a.5.5 0 010-1H13V5.5a.5.5 0 01.5-.5z" clip-rule="evenodd"/>
                    <path fill-rule="evenodd" d="M13 7.5a.5.5 0 01.5-.5h2a.5.5 0 010 1H14v1.5a.5.5 0 01-1 0v-2z" clip-rule="evenodd"/>
                  </svg>
            </div>

            <% if (typeof(errors) != "undefined") { %> ERROR

                <ul>
                    <% errors.forEach(error => { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

                    <form action="/signup" method="post">
                        <input type="text" name="username" id="username" placeholder="username" />
                        <input type="password" name="senha" id="senha" placeholder="senha" />

                        <button class="btn btn-light my-3" type="submit">Cadastrar</button>

                        <a class="btn btn-danger" href="/login">Voltar</a>
                    </form>

        </div>
    </div>

    <%- include('parts/foot.ejs') %>