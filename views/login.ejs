                  </svg>
            </div>

            <h1>Login</h1>
            <form action="/login" method="post">
                <input type="text" name="username" id="username" placeholder="username" />
                <input type="password" name="senha" id="senha" placeholder="senha" /><br />
                <div class="custom-control custom-checkbox mt-1">
                    <input class="custom-control-input" type="checkbox" name="logado" id="logado" />
                    <label class="custom-control-label" for="logado">Manter logado?</label><br />
                </div>
                <div>
                    <button class="btn btn-light my-3 mx-2" type="submit">Entrar</button>

                    <a class="btn btn-secondary my-3 mx-2 " href="/signup">Cadastrar</a>
                </div>
            </form>


        </div>
    </div>

    <%- include('parts/foot.ejs') %>